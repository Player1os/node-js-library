{
  "name": "@player1os/ts-npm-package-template",
  "version": "0.0.0",
  "description": "A template project from which NPM packages written in Typescript can be derived",
  "main": "build/index.js",
  "types": "@types/index.d.ts",
  "scripts": {
    "preversion": "support-require @player1os/typescript-support/lib/task/preversion",
    "postversion": "support-require @player1os/typescript-support/lib/task/postversion",
    "update-base-create": "support-require @player1os/typescript-support/lib/task/update_base/create",
    "update-base-load": "support-require @player1os/typescript-support/lib/task/update_base/load",
    "build": "support-require @player1os/typescript-support/lib/task/_build",
    "build-watch": "support-require @player1os/typescript-support/lib/task/_build/watch",
    "test": "support-require @player1os/typescript-support/lib/task/_test",
    "test-watch": "support-require @player1os/typescript-support/lib/task/_test/watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/ts-npm-package-template.git"
  },
  "keywords": [
    "typescript",
    "npm",
    "package",
    "template"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Player1os/ts-npm-package-template/issues"
  },
  "homepage": "https://github.com/Player1os/ts-npm-package-template/#readme",
  "engines": {
    "node": "^10.6.0",
    "npm": "^6.1.0"
  },
  "devDependencies": {
    "@player1os/typescript-support": "^1.3.9",
    "coveralls": "^3.0.14"
  }
}
